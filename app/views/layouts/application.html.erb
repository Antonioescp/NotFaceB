<!DOCTYPE html>
<html>
  <head>
    <title>NotFacebook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="app-cabecera">
      <h1><%= link_to "NotFacebook!", root_path %></h1>
      <% unless session[:usuario_id] %>
        <%= link_to "Iniciar Sesion", login_path %> | 
        <%= link_to "Registrate!", registro_path %>
      <% else %>
        <%= @usuario_actual.nombre + " " + @usuario_actual.apellido %> | 
        <%= link_to "Mi Perfil", mi_perfil_path %> | 
        <%= link_to "Mi Inicio", muro_path %> | 
        <%= link_to "Cerrar Sesion", logout_path, method: :delete %>
    <% end %>
    </div>

    <% if session[:usuario_id] %>
      <div class="app-usuarios" style="height:100px; overflow: auto; border:1px solid black; margin: 10px; width: 500px; padding-top:5px; padding-left: 15px;">
        <p>Personas que tal vez conozcas (o tal vez no)</p>
        <ul>
          <% @personas.each do |p| %>
            <li><%= p.nombre + " " + p.apellido + ", posts: #{p.posts.count}, comentarios: #{p.comentarios.count}" %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="app-notificaciones" style="margin-top:15px; color: #89D800;">
      <%= notice %>
    </div>

    <%= yield %>
  </body>
</html>
